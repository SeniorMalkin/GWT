<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:clv="urn:import:com.google.gwt.user.cellview.client">
    <gwt:HTMLPanel>
        <div align="center">
                <gwt:HorizontalPanel ui:field="horPanel">

                    <gwt:HTMLPanel>
                        <table align="center" cellspacing='0' cellpadding='0' style='width:100%;'>
                            <tr>
                                <td align='center'>
                                    <clv:CellTable
                                            pageSize='15'
                                            ui:field='table' />
                                </td>
                            </tr>
                            <tr>
                                <td align='center'>
                                    <clv:SimplePager ui:field='pager' />
                                </td>
                            </tr>
                        </table>
                    </gwt:HTMLPanel>
                </gwt:HorizontalPanel>
        </div>
    </gwt:HTMLPanel>
</ui:UiBinder>